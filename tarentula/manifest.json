{

  "manifest_version": 2,


  "name": "myExt",
  "description" : "myTube Extension",
  "version": "0.1",
  
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png",
    "default_title": "URL"
  },

  "background" : {
  	"scripts" : ["event_script.js"],
  	"persistent" : false

  },

  "content_scripts" : [
    {
      "matches" : ["*://www.youtube.com/watch*"],
      "js" : ["content_script.js"]
    }
  ],

  "permissions": [
    "tabs",
    "<all_urls>"
    ]
}